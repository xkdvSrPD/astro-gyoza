---
import { ViewTransitions } from 'astro:transitions'
import {
  CommonHead,
  WebAnalytics,
  ThemeLoader,
  AccentColorInjector,
  PrintVersion,
} from '@/components/head'
import { site } from '@/config.json'
import '@/styles/global.css'

interface Props {
  title?: string
  description?: string
  image?: string
}

const { title, description, image } = Astro.props
---

<!doctype html>
<html lang={site.lang} transition:animate="none">
  <head>
    <CommonHead title={title} description={description} image={image} />
    <WebAnalytics />
    <ViewTransitions />
    <ThemeLoader />
    <AccentColorInjector />
    <PrintVersion />
  </head>
  <body>
    <slot />
  </body>
</html>
